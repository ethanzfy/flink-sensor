.container {
  padding: 20rpx;
  background-color: #f8f8f8;
}

/* 状态徽章样式 */
.status-badge {
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: white;
  margin-bottom: 20rpx;
}

.connected {
  background-color: #4caf50; /* 绿色 - 已连接 */
}

.disconnected {
  background-color: #f44336; /* 红色 - 未连接 */
}

/* 连接信息样式 */
.connection-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

/* 图表容器样式 */
.chart-container {
  width: 100%;
  height: 500rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  overflow: hidden;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

/* 错误信息样式 */
.error-container {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #ffebee;
  border-radius: 8rpx;
  border-left: 8rpx solid #f44336;
}

.error-message {
  font-size: 28rpx;
  color: #d32f2f;
  display: block;
  margin-bottom: 16rpx;
}

.retry-button {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background-color: #f44336;
  color: white;
  border-radius: 6rpx;
  border: none;
  margin-top: 10rpx;
}

/* 数据列表样式 */
.data-list {
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
}

.data-list-header {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
}

.data-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
}

.device-id {
  font-weight: bold;
  color: #2196f3;
  width: 30%;
}

.value {
  color: #4caf50;
  text-align: center;
  width: 30%;
}

.timestamp {
  color: #9e9e9e;
  font-size: 24rpx;
  text-align: right;
  width: 40%;
} 