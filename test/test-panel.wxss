/* 测试面板组件样式 */
.test-panel {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  z-index: 1000;
  transition: all 0.3s ease;
}

.test-panel.collapsed {
  height: 80rpx;
}

.test-panel.expanded {
  max-height: 80vh;
  overflow-y: auto;
}

/* 面板标题栏 */
.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.panel-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.panel-toggle {
  font-size: 28rpx;
  color: #2196f3;
}

/* 面板内容 */
.panel-content {
  padding: 20rpx 30rpx;
}

/* 测试选项 */
.test-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.test-option {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
  border-left: 8rpx solid #2196f3;
}

.option-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.option-desc {
  font-size: 26rpx;
  color: #666666;
}

/* 测试进度 */
.test-progress {
  background-color: #e3f2fd;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #1976d2;
  text-align: center;
}

/* 测试结果 */
.test-result {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.result-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  font-size: 26rpx;
  color: #666666;
}

.result-status {
  font-weight: bold;
}

.result-status.success {
  color: #4caf50;
}

.result-status.failure {
  color: #f44336;
} 